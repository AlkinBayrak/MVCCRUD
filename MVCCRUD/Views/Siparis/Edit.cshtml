@using MVCCRUD.Entities.Concrete
@model Siparis


<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label>Musteri :</label>
        <select asp-for="MusteriId" asp-items="ViewBag.mSiparis" class="form-control" required></select>
    </div>
    <div class="form-group">
        <label>Urun :</label>
        <select asp-for="UrunId" asp-items="ViewBag.uSiparis" class="form-control" required></select>
    </div>
    <div class="form-group">
        <label>Siparis Tarihi:</label>
        <input type="date" asp-for="SiparisTarihi" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Ekle</button>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</form>
