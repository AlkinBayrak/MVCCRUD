@using MVCCRUD.Entities.Concrete
@model IEnumerable<Siparis>


<div class="container mt-5">
    <h2 class="mb-4">Siparisler</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@item.Musteri.Ad @item.Musteri.Soyad</h5>
                    <h5 class="card-title">@item.Urun.UrunAdi @item.Urun.Fiyat</h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary">@item.MusteriId</h6>
                </div>
            </div>
        }

    </div>
    <div class="mt-5">
        <a asp-action="Create" class="btn btn-primary">Ekle</a>
    </div>
  
</div>